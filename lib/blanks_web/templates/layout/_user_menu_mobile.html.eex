<%= if @current_user do %>
  <%# @current_user.email %>
  <%= link "Settings", to: Routes.user_settings_path(@conn, :edit), class: "mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700" %>
  <%= link "Logout", to: Routes.user_session_path(@conn, :delete), method: :delete, class: "mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700" %>

<% else %>
  <%= link "Login", to: Routes.user_session_path(@conn, :new), class: "mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700" %>
<% end %>
