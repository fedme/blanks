<header class="bg-white shadow">
  <div class="flex justify-between items-center max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <h1 class=" block text-3xl font-bold leading-tight text-gray-900">Your cloze tests</h1>
    <%= live_patch "New cloze test", to: Routes.cloze_test_edit_path(@socket, :new), class: "block bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
  </div>
</header>

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-2 sm:px-0">
    <div class="max-w-3xl">

      <p class="font-light text-gray-500 mb-8">Here is the list of cloze tests you have created. Click on <strong>New cloze test</strong> to create a new one.</p>

      <%= for cloze_test <- @cloze_tests do %>
        <div id="cloze_test-<%= cloze_test.id %>" class="bg-gray-100 rounded-md p-6 mb-4">
          <%= live_redirect cloze_test.name, to: Routes.cloze_test_edit_path(@socket, :edit, cloze_test), class: "text-xl font-medium pb-2 hover:text-gray-700" %>
          <div class="flex content-between">
            <div class="w-2/3 py-2">
              <p><%= if String.length(cloze_test.content) > 50, do: String.slice(cloze_test.content, 0..50) <> "...", else: cloze_test.content %></p>
            </div>

            <div class="w-1/3 p-2 text-right">
              <%= link "Delete", to: "#", phx_click: "delete", phx_value_id: cloze_test.id, data: [confirm: "Are you sure?"], class: "text-red-700 hover:text-red-600" %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
