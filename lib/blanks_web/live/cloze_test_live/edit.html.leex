<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold leading-tight text-gray-900"><%= @page_title %></h1>
  </div>
</header>

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-2 sm:px-0">
    <div class="flex w-full">
      <div class="cloze-editor sm:w-full w-1/2 p-4 md:pl-0 pt-0">
        <%= f = form_for @changeset, "#",
                  phx_submit: "editor-submit",
                  phx_change: "editor-change" %>

          <div class="field">
            <%= text_input f, :name,
                            placeholder: "Name",
                            autocomplete: "off",
                            phx_debounce: "2000",
                            class: "form-input" %>
            <%= error_tag f, :name %>
          </div>

          <div class="field">
            <%= textarea f, :content,
                            rows: 12,
                            placeholder: "Content",
                            autocomplete: "off",
                            phx_debounce: "500",
                            class: "w-full resize-y border rounded focus:outline-none focus:shadow-outline px-2 py-1" %>
            <%= error_tag f, :content %>
          </div>

          <%= submit "Save", phx_disable_with: "Saving...", class: "mb-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </form>
      </div>

      <div class="cloze-preview sm:w-full w-1/2 p-4 pt-0">
        <article class="w-full prose">
          <%= _f = form_for :aaa, "#",
                    phx_submit: "preview-submit",
                    phx_change: "preview-change" %>
            <%= raw(@preview_html) %>
          </form>
        </article>
      </div>

    </div>
    <span><%= live_redirect "Back", to: Routes.cloze_test_index_path(@socket, :index) %></span>

  </div>
</div>
