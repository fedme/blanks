<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold leading-tight text-gray-900"><%= @page_title %></h1>
  </div>
</header>

<div class="max-w-7xl mx-auto pt-4 sm:px-6 lg:px-8">
  <div class="pt-2">
    <div class="md:flex w-full">
      <div class="cloze-editor w-full md:w-1/2 p-2 md:p-4 md:pl-0 pt-0">
        <%= f = form_for @changeset, "#",
                  phx_submit: "editor-submit",
                  phx_change: "editor-change" %>

          <div class="field">
            <%= text_input f, :name,
                            placeholder: "Name",
                            autocomplete: "off",
                            phx_debounce: "2000",
                            class: "form-input" %>
            <%= error_tag f, :name %>
          </div>

          <div class="field">
            <%= textarea f, :content,
                            rows: 12,
                            placeholder: "Content",
                            autocomplete: "off",
                            phx_debounce: "500",
                            class: "w-full resize-y border rounded focus:outline-none focus:shadow-outline px-2 py-1" %>
            <%= error_tag f, :content %>
          </div>

          <div class="flex items-center mb-2">
            <%= submit "Save", phx_disable_with: "Saving...", class: "block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
            <div class="ml-4 hover:text-blue-800"><%= live_redirect "Back", to: Routes.cloze_test_index_path(@socket, :index) %></div>
          </div>
        </form>
      </div>

      <div class="cloze-preview w-full md:w-1/2 p-2 md:p-4 pt-1">
        <article class="w-full prose">
          <%= _f = form_for :aaa, "#",
                    phx_submit: "preview-submit",
                    phx_change: "preview-change" %>
            <%= raw(@preview_html) %>
          </form>
        </article>
      </div>
    </div>

  </div>
</div>
