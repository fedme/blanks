<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "cloze_test-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= hidden_input f, :user_id, value: @user_id %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :content %>
  <%= text_input f, :content %>
  <%= error_tag f, :content %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
